{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "args": [ "${input:programArgs}" ]
        },
        {
            "name": "Agno Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/agno/main.py",
            "cwd": "${workspaceFolder}/agno",
            "console": "integratedTerminal",
            "args": [ "${input:programArgs}" ]
        }
    ],
    "inputs": [
        {
            "id": "programArgs",
            "type": "promptString",
            "description": "Input Program Arguments",
            "default": ""
        }
    ]
}